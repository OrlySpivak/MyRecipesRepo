@model RecipesProj.Models.Recipe

@{
    ViewBag.Title = "Details";
    var URLId = Model.VideoURL.Substring(Model.VideoURL.IndexOf("?v=") + 3);
    string embedlink = "https://www.youtube.com/embed/" + URLId;
}

<div class="embed-responsive embed-responsive-16by9">
    <iframe class="embed-responsive-item" src="@embedlink" allowfullscreen></iframe>
</div>
<h2 class="margin-top">
    @Html.DisplayFor(model => model.Name)
</h2>
<div>
    <hr />
    <div>
        <span>
            @Html.DisplayNameFor(model => model.FoodType.Type)
        </span>
        <span>
            @Html.DisplayFor(model => model.FoodType.Type):
        </span>

        <span>
            @Html.DisplayFor(model => model.InsertDate)
        </span>
    </div>
    <dl class="dl-horizontal p-2">

        <dt class="p-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>

        <dd class="p-2">
            @Html.DisplayFor(model => model.Description)
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>
