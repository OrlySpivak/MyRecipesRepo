<script type='text/javascript'>
    function GetMap() {
        var map = new Microsoft.Maps.Map('#myMap');

        var azrieliLoc = new Microsoft.Maps.Location(@ViewData["azrieliLat"], @ViewData["azrieliLong"]);
        var comanLoc = new Microsoft.Maps.Location(@ViewData["colmanLat"], @ViewData["colmanLong"]);


        //Create custom Pushpin
        var azrieliPin = new Microsoft.Maps.Pushpin(azrieliLoc, {
            title: 'MyRecipes',
            subTitle: 'Azrieli',
            text: '1'
        });

         var colmanPin = new Microsoft.Maps.Pushpin(comanLoc, {
            title: 'MyRecipes',
            subTitle: 'College Of Management',
            text: '2'
        });

        map.entities.push([azrieliPin, colmanPin]);

        $('#azrieli').click(() => {
            map.setView({
                center: azrieliLoc,
                zoom: 15
            });
        })

        $('#colman').click(() => {
            map.setView({
                center: comanLoc,
                zoom: 15
            });
        })

        $.ajax({
            type: "GET",
            url: 'http://api.openweathermap.org/data/2.5/weather?lat=' + @ViewData["azrieliLat"] + '&lon=' + @ViewData["azrieliLong"] + '&units=metric&appid=b5543e7ce381d451ca1e82689d057469',
            success: function (data) {
                $('#azrieliTemp').html("It's " + data.main.temp + "°C on Azrieli. You should eat someting " + (data.main.temp > 20 ? "cold" : "hot"));
            }
        })

        $.ajax({
            type: "GET",
            url: 'http://api.openweathermap.org/data/2.5/weather?lat=' + @ViewData["colmanLat"] + '&lon=' + @ViewData["colmanLong"] + '&units=metric&appid=b5543e7ce381d451ca1e82689d057469',
            success: function (data) {
                $('#colmanTemp').html("It's " + data.main.temp + "°C on College of Management. You should eat someting " + (data.main.temp > 20 ? "cold" : "hot"));
            }
        })
    }
</script>

<div class="d-flex flex-column justify-content-center align-items-center">

    <h3>@ViewBag.Message</h3>

    <address>
        <span class="branch-desc" id="azrieli">
            <b>Azrieli Mall</b>
            Menahem Begin 132, Tel Aviv
        </span>
    </address>

    <address>
        <span class="branch-desc" id="colman">
            <b>College of Management</b>
            Eli Visel 2, Rison Letzion
        </span>
    </address>

    <div id="myMap"></div>

    <div class="d-flex flex-row ">
        <address>
            <strong>Support:</strong>   <a href="mailto:Support@example.com">Support@example.com</a> |
            <strong>Marketing:</strong> <a href="mailto:Marketing@example.com">Marketing@example.com</a>
        </address>

    </div>
    <aside id="aside">Not available on weekends</aside>

    <div class="card" id="weather-tip">
        <div class="card-body d-flex flex-column align-items-center">
            <i class="fa fa-bell"></i>
            <b>Our Tip</b>
            <div id="azrieliTemp"></div>
            <div id="colmanTemp"></div>
        </div>
    </div>
</div>


